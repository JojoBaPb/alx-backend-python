pipeline {
    agent any

    tools {
        // ShiningPanda plugin manages Python virtualenvs
        python 'Python3'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    credentialsId: 'github-creds',
                    url: 'https://github.com/<your-username>/alx-backend-python.git'
            }
        }

        stage('Install dependencies') {
            steps {
                withPythonEnv('Python3') {
                    sh '''
                        pip install --upgrade pip
                        pip install -r messaging_app/requirements.txt
                    '''
                }
            }
        }

        stage('Run Tests') {
            steps {
                withPythonEnv('Python3') {
                    sh '''
                        pytest messaging_app/tests --junitxml=report.xml --cov=messaging_app
                    '''
                }
            }
            post {
                always {
                    junit 'report.xml'
                }
            }
        }
    }
}

